<% if flash[:notice] %>
				<div class="flash">
					<%= flash[:notice] %>
				</div>
<% end %>

<div class="container">
	<div class="row">
		<div class="col-xs-3">

			<h2>User info</h2>
			<%= render 'users/profile', user: @user %>

			<h2>New book</h2>
			<%= render 'books/newform', book_new: @book_new %>

		</div>

		<div class="col-xs-9">
			<h2>Book detail</h2>

			<table class="table">
				<thead>
					<tr>
						<th colspan="7"></th>
					</tr>
				</thead>
				<tbody>
					<td>
						<%= link_to (@book.user) do %>
							<%= attachment_image_tag @book.user, :profile_image, :fill, 100, 100, format: 'jpeg', fallback: "no-image-mini.jpg" %><br>
							<%= @book.user.name %>
						<% end %>
					</td>
					<td><%= link_to @book.title, @book %></td>
					<td><%= @book.body %></td>
					<% if @book.favorited_by?(current_user) %>
						<td><%= link_to book_favorites_path(@book), method: :delete do %>
							<i class="fa fa-heart" aria-hidden="true" style="color: red;" ></i>
							<h5><%= @book.favorites.count %>いいね</h5>
						<% end %></td>
					<% else %>
						<td><%= link_to book_favorites_path(@book), method: :post do %>
							<i class="fa fa-heart" aria-hidden="true" ></i>
							<h5><%= @book.favorites.count %>いいね</h5>
						<% end %></td>
					<% end %>
					<td><%= @book.book_comments.count %>Comments</td>
					<% if @user == current_user %>
						<td><%= link_to "Edit",edit_book_path(@book), class: "btn-sm btn-success edit_book_#{@book.id}" %></td>
						<td><%= link_to "Destroy",@book, method: :delete, data: {confirm: "本当に削除してもよろしいですか？"}, class: "btn-sm btn-danger destroy_book_#{@book.id}" %></td>
					<% end %>
				</tbody>
			</table>
			<div class="comment-index">
				<table class="table table-striped">
					<thead>
						<tr>
							<th>Name</th>
							<th>Comment</th>
							<th>Date</th>
							<th colspan="4"></th>
						</tr>
					</thead>
					<tbody>
						<% @book.book_comments.each do |book_comment| %>
							<tr>
								<td><%= book_comment.user.name %></td>
								<td><%= book_comment.comment %></td>
								<td><%= book_comment.created_at.strftime('%Y/%m/%d') %></td>
								<% if book_comment.user_id == current_user.id %>
									<td><%= link_to 'destroy', book_book_comment_path(@book, book_comment), method: :delete, "data-confirm" => "Are you sure?" %></td>
								<% end %>
							</tr>
						<% end %>
					</tbody>
				</table>
			</div>
			<div class="comment-form">
				<%= form_for [@book, @book_comment] do |f| %>
					<%= f.text_area :comment, rows:'5' %>
					<%= f.submit 'Create Comment' %>
				<% end %>
			</div>

		</div>
	</div>
</div>
