

<h1>Search Results</h1>

<% if @user_or_book == "1" %>
	<table class="table table-striped">
		<tbody>
			<% @users.each do |user| %>
				<tr>
					<td><%= attachment_image_tag user, :profile_image, :fill, 50, 50, format: 'jpeg', fallback: "no-image-mini.jpg" %></td>
					<td><%= user.name %></td>
					<td><%= link_to 'Show', user_path(user) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% elsif @user_or_book == "2" %>
	<table class="table table-striped">
		<tbody>
			<% @books.each do |book| %>
				<tr>
					<td><%= link_to book.title, book_path(book) %></td>
				</tr>
			<% end %>
		</tbody>
	</table>
<% else %>
<% end %>